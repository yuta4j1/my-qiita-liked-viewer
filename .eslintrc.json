{
    "extends": [
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": { "browser": true, "node": true, "es6": true },
    "parserOptions": {
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
        "eqeqeq": ["error", "smart"],
        "no-var": "error",
        "prefer-const": "error",
        "no-console": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
  }